{
  "noCi": true,
  "analyzeCommits": {
    "preset": "eslint"
  },
  "generateNotes": {
    "preset": "eslint"
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/changelog",
      {
        "path": "@semantic-release/git",
        "assets": [ "CHANGELOG.md", "package.json" ],
        "message": "Release: ${nextRelease.version}"
      },
      "@semantic-release/npm"
    ],
    "publish": [
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}
